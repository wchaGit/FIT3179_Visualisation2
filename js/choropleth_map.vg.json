{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Electricity Generation 2021",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
            "type": "topojson",
            "feature": "ne_110,_admin_0_countries"
        }
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/wchaGit/FIT3179/main/total_electricity_generation_countries2021.csv"
                },
                "key": "Area",
                "fields": ["Value"]
            }
        }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
            "field": "Value",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "properties.Name",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Value", 
                "type": "quantitative"
            }
        ]
    }
}