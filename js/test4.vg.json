{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Electricity Generation (2000-2020)",
    "data": {
      "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/data/generation.csv"
    },
    "params": [
      {
        "name": "year_select",
        "value": 2018,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2020,
          "step": 1,
          "name": "Year: "
        }
      }
    ],  
    "vconcat": [
      {
        "width": 800,
        "height": 500,
        "projection": {
          "type": "equalEarth"
        },
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m_admin_0_countries.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {
              "type": "geoshape",
              "fill": "#ddd",
              "stroke": "white",
              "strokeWidth": 1
            },
            "encoding": {
              "tooltip": {"field": "note"}
            }
          },
          {
            "params": [
              {
                "name": "loc_select",
                "select": {"type": "point", "encodings": ["description"]}
              }
            ],
            "transform": [
              {
                "lookup": "Area",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                  },
                  "key": "properties.NAME"
                },
                "as": "geo"
              },
              {
                "filter": "year(datum.Year) == year_select"
              },
              {
                "joinaggregate": [
                  {
                    "op": "sum",
                    "field": "Value",
                    "as": "total_elec"
                  }
                ],
                "groupby": ["Area", "Year"]
              }
            ],
            "mark": {
              "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5
            },
            "encoding": 
            {
              "description": {"field": "Area"},
              "shape": {"field": "geo", "type": "geojson"},
              "color":
              {
                "field": "total_elec",
                "type": "quantitative",
                "title": "GWh",
                "scale": {
                  "type": "threshold",
                  "domain": [1,100,250,500,1000,2500,5000],
                  "range": ["#ffffcc", "#c7e9b4", "#7fcdbb", "#41b6c4", "#1d91c0", "#225ea8", "#0c2c84"]
                },
                "legend": {"format": ".2s"}
              },
              "tooltip":
              [
                {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
                {"field": "Area", "type": "nominal", "title": "Country"},
                {"field": "total_elec", "type": "quantitative", "title": "GWh"}
              ]
            }
          }
        ]
      },
      {
        "width": 600,
        "height": 300,
        "encoding": {"x": {"field": "Year", "type": "temporal"}},
        "layer": [
          {
            "transform": [
              {"filter": {"param": "loc_select"}}
            ],
            "encoding": {
              "color":
              {
                "field": "Variable", "type": "nominal", 
                "scale": {"domain": ["Bioenergy", "Coal", "Gas", "Hydro", "Nuclear", "Other Fossil", "Other Renewables", "Solar", "Wind"], 
                "range":["#A852D9", "#6E5449", "#5D8365", "#58A4B0", "#FFD92F", "#814528", "#CBE896", "#CB8A01", "#A9BCD0"]}
              },
              "y": {"field": "Value", "aggregate": "sum", "type": "quantitative", "axis":{"title": "Capacity (GW)", "grid": true} },
              "x": {"field": "Year", "type": "temporal", "axis":{"grid": false}}
            },
            "layer": [
              {"mark": "line"},
              {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
            ]
          },
          {
            "transform": [{"pivot": "Variable", "value": "Value", "groupby": ["Year"]}],
            "mark": "rule",
            "encoding": {
                "opacity": {
                    "condition": {"value": 100, "param": "hover", "empty": false},
                    "value": 0
                  },
              "tooltip": [
                {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
                {"field": "Bioenergy", "type": "quantitative"},
                {"field": "Coal", "type": "quantitative"},
                {"field": "Gas", "type": "quantitative"},
                {"field": "Hydro", "type": "quantitative"},
                {"field": "Nuclear", "type": "quantitative"},
                {"field": "Other Fossil", "type": "quantitative"},
                {"field": "Other Renewables", "type": "quantitative"},
                {"field": "Solar", "type": "quantitative"},
                {"field": "Wind", "type": "quantitative"}
              ]
            },
            "params": [{
                "name": "hover",
                "select": {
                  "type": "point",
                  "fields": ["Year"],
                  "nearest": true,
                  "on": "mouseover",
                  "clear": "mouseout"
                }
            }]
          }
        ]
      },
      {
        "mark": {
            "type": "text",
            "align": "center",
            "baseline": "bottom",
            "x": 500,
            "y": 0
        },
        "encoding": {
          "text": {
            "condition": {
              "test": "!isDefined(loc_select.Area)",
              "value": "World"
            },
            "value": {"expr": "loc_select.Area"}
          }
        }
      }
    ]
  }