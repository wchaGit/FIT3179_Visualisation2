{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Electricity Generated",
  "width": 800,
  "height": 400,
  "params": 
  [
    {
      "name": "Year_selection",
      "value": 2018,
      "bind": 
      {
        "input": "range",
        "min": 2000,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "layer":
  [
    {
      "data": 
      {
        "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": 
      {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      }
    },
    {
      "data":
      {
        "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/data/total_generation.csv"
      },
      "transform":
      [
        {
          "lookup": "Area",
          "from":
          {
            "data":
            {
              "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding":
      {
        "shape": {"field": "geo", "type": "geojson"},
        "color":
        {
          "field": "Value",
          "type": "quantitative",
          "title": "Generated",
          "scale": {"type": "linear"},
          "legend": {"format": ".2s"}
        },
        "tooltip":
        [
          {"field": "Area", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "title": "Generated"}
        ]
      }
    }
  ],
  "config": {}
}
