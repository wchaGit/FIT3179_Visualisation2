{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Median house price per suburb (2010-2020)",
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/6_advanced_examples/data/house_price_by_suburb_long_format.csv"
    },
    "params": [
      {
        "name": "year_select",
        "value": 2015,
        "bind": {
          "input": "range",
          "min": 2010,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      },
      {
          "name": "zoom_level",
          "value": 30000,
          "bind": {
              "input": "range",
              "min": 3500,
              "max": 60000,
              "step": 100,
              "name": "Zoom: "
          }
      },
      {
          "name": "center_to",
          "value": [145, -37.45],
          "bind": {
              "input": "select",
              "options": [
                  [145, -37.45],
                  [144.3, -37.6],
                  [144.9, -36.2],
                  [147.1, -37.6]
              ],
              "labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
              "name": "Map Centre: "
          }
      }
    ],  
    "vconcat": [
      {
        "width": "container",
        "height": 500,
        "projection": {
          "type": "equirectangular",
          "center": {"expr": "center_to"},
          "scale": {"expr": "zoom_level"}
        },
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/6_advanced_examples/data/VIC_LOCALITY_POLYGON_SHP.json",
              "format": {"type": "topojson", "feature": "VIC_LOCALITY_POLYGON_SHP"}
            },
            "transform": [
              {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
              }
            ],
            "mark": {
              "type": "geoshape",
              "fill": "#ddd",
              "stroke": "white",
              "strokeWidth": 1
            },
            "encoding": {
              "tooltip": {"field": "note"}
            }
          },
          {
            "params": [
              {
                "name": "loc_select",
                "select": {"type": "point", "encodings": ["description"]}
              }
              
            ],
            "transform": [
              {
                "lookup": "locality",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/6_advanced_examples/data/VIC_LOCALITY_POLYGON_SHP.json",
                    "format": {"type": "topojson", "feature": "VIC_LOCALITY_POLYGON_SHP"}
                  },
                  "key": "properties.NAME"
                },
                "as": "geo"
              },
              {
                "filter": "year(datum.year) == year_select"
              }
            ],
            "mark": {
              "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5
            },
            "encoding": {
              "shape": {"field": "geo", "type": "geojson"},
              "description": {"field": "locality"},
              "fill": {
                "field": "price",
                "type": "quantitative",
                "title": "Median Price (AUD)",
                "scale": {
                  "domain": [400000, 1500000],
                  "scheme": "reds"
                },
                "legend": {"format": ".2s"}
              },
              "tooltip": [
                {"field": "locality", "title": "Suburb"},
                {"field": "price", "format": ",", "title": "Median Price (AUD)"},
                {"field": "year", "title": "Year", "type": "temporal", "timeUnit": "year"}
              ]
            }
          }
        ]
      },
      {
        "width": "container",
        "height": 300,
        "layer": [
          {
            "mark": "line",
            "transform": [
              {"filter": {"param": "loc_select"}}
            ],
            "encoding": {
              "x": {"field": "year", "type": "temporal", "axis": {"grid": false}, "title": "Year"},
              "y": {"aggregate": "average", "field": "price", "type": "quantitative", "title": "Median Price (AUD)", "axis": {"format": ".2s"}}
            }
          },
          {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "bottom",
                "x": "width",
                "y": 0
            },
            "encoding": {
              "text": {
                "condition": {
                  "test": "!isDefined(loc_select.locality)",
                  "value": "ALL SUBURBS"
                },
                "value": {"expr": "loc_select.locality"}
              }
            }
          }
        ]
      }
    ]
  }