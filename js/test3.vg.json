{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "elec gen)",
    "data": {
      "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/data/generation.csv"
    },
    "params": [
      {
        "name": "year_select",
        "value": 2018,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2020,
          "step": 1,
          "name": "Year: "
        }
      }
    ],  
    "vconcat": [
      {
        "width": 800,
        "height": 500,
        "projection": {
          "type": "equalEarth"
        },
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {
              "type": "geoshape",
              "fill": "#ddd",
              "stroke": "white",
              "strokeWidth": 1
            },
            "encoding": {
              "tooltip": {"field": "note"}
            }
          },
          {
            "params": [
              {
                "name": "loc_select",
                "select": {"type": "point", "encodings": ["description"]}
              }
            ],
            "transform": [
              {
                "lookup": "Area",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/wchaGit/FIT3179_Visualisation2/master/js/ne_110m.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                  },
                  "key": "properties.NAME"
                },
                "as": "geo"
              },
              {
                "filter": "year(datum.Year) == year_select"
              },
              {
                "joinaggregate": [
                  {
                    "op": "sum",
                    "field": "Value",
                    "as": "total_elec"
                  }
                ],
                "groupby": ["Area", "Year"]
              }
            ],
            "mark": {
              "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5
            },
            "encoding": 
            {
              "shape": {"field": "geo", "type": "geojson"},
              "color":
              {
                "field": "total_elec",
                "type": "quantitative",
                "title": "Generated",
                "scale": {"type": "linear"},
                "legend": {"format": ".2s"}
              },
              "tooltip":
              [
                {"field": "Area", "type": "nominal", "title": "Country"},
                {"field": "total_elec", "type": "quantitative", "title": "Generated"}
              ]
            }
          }
        ]
      },
      {
        "width": 600,
        "height": 300,
        "layer" : 
        [
          {
            "mark": "area",
            "transform": [
              {"filter": {"param": "loc_select"}}
            ],
            "encoding": {
              "x": {
                "timeUnit": "year", "field": "Year",
                "axis": {"format": "%Y"}
              },
              "y": {
                "aggregate": "sum", "field": "Value"
              },
              "color": {
                "field": "Variable",
                "scale": {"scheme": "category20b"}
              }
            }
          },
          {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "bottom",
                "x": "width",
                "y": 0
            },
            "encoding": {
              "text": {
                "condition": {
                  "test": "!isDefined(loc_select.Area)",
                  "value": "ALL COUNTRIES"
                },
                "value": {"expr": "loc_select.Area"}
              }
            }
          }
        ]

      }
    ]
  }